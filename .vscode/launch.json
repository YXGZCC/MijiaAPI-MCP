{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "调试 MCP 服务器",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/server.js",
      "preLaunchTask": "npm: build",
      "env": {
        "DEBUG": "true",
        "PYTHON_PATH": "${workspaceFolder}/.venv/Scripts/python.exe",
        "PYTHON_SCRIPT_DIR": "${workspaceFolder}/adapter",
        "MIJIA_AUTH_PATH": "${env:USERPROFILE}/.config/mijia-api/auth.json"
      },
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "MCP Inspector 调试",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "@modelcontextprotocol/inspector",
        "node",
        "${workspaceFolder}/dist/server.js"
      ],
      "preLaunchTask": "npm: build",
      "env": {
        "DEBUG": "true",
        "PYTHON_PATH": "${workspaceFolder}/.venv/Scripts/python.exe",
        "PYTHON_SCRIPT_DIR": "${workspaceFolder}/adapter"
      },
      "console": "integratedTerminal"
    }
  ]
}
